  "devDependencies": {
    "prettier": "^1.16.4",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-microsoft-contrib": "^6.1.0",
    "tsutils": "^3.10.0",
    "typescript": "^3.4.2"
  }
}
